.navigation
  %nav.navbar.navbar-fixed-top.navbar-inverse
    = render partial: 'shared/top_header'
.container
  .row
    .col-md-10.col-sm-10.col-xs-12
      .panel.panel-main
        #content
          %h1 Welcome back!
          = render partial: 'shared/flash'
          .row
            .col-xs-12
              = form_tag session_path do
                .form-group
                  = label_tag :email
                  = text_field_tag :email, nil, class: 'input input-lg form-control'
                .form-group
                  = label_tag :password
                  = password_field_tag :password, nil, class: 'input input-lg form-control'
                .form-group
                  .text-center= submit_tag "Come on in!", class: 'btn btn-lg btn-primary'
          .row
            .col-xs-12
              %p.text-center Not a member yet? What are you waiting for? #{link_to 'Sign up!', new_user_path}
          .row
            .col-xs-12
              %p.text-center Forgot your password? No worries! #{link_to 'Click here', new_password_reset_path} to reset it.
            