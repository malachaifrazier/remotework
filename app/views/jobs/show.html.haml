.container
  .row
    .col-md-10.col-sm-10.col-xs-12
      = link_to "Back to Job List", :back
      .panel
        #content
          .job-heading
            %h1.job-title= @job.title
            %h2.job-company= @job.company
            .tags
              -# TODO REFACTOR ME I'M HIDEOUS
              - @job.language_list.first(4).each do |tag|
                %span.label.label-warning= tag.to_s
              - @job.library_list.first(4).each do |tag|
                %span.label.label-primary= tag.to_s
              - @job.tool_list.first(3).each do |tag|
                %span.label.label-success= tag.to_s
              - @job.skill_list.first(3).each do |tag|
                %span.label.label-info= tag.to_s
          .job-description
            = @job.description.squeeze(' ').html_safe
          .apply
            = link_to "Apply on #{@job.source}", @job.original_post_url, class: "btn btn-primary btn-lg", target: '_blank'
      = link_to "Back to Job List", :back
