%ul
  - jobs.each do |job|
    %li
      .job
        .row
          .col-sm-10
            %h2= link_to job.title, job_path(job)
          .col-sm-2
            .hidden-xs
              .pull-right.category= link_to job.category.name, category_path(job.category.name)
            .visible-xs
              .category= link_to job.category.name, category_path(job.category.name)
        .row
          .col-xs-8
            %h3= job.company
          .col-xs-4
            .hidden-xs
              %p.pull-right.when-posted= when_posted(job)
            .visible-xs.when-posted
              %p= when_posted(job)
        .row
          .col-xs-12
            -# TODO REFACTOR ME I'M HIDEOUS
            - job.language_list.first(4).each do |tag|
              %span.label.label-warning= tag.to_s
            - job.library_list.first(4).each do |tag|
              %span.label.label-primary= tag.to_s
            - job.tool_list.first(3).each do |tag|
              %span.label.label-success= tag.to_s
            - job.skill_list.first(3).each do |tag|
              %span.label.label-info= tag.to_s

= paginate(jobs)
